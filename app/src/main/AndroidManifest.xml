<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.battle">

    <application
        android:allowBackup="true"
        android:icon="@drawable/battle_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/battle_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Battle">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ActivityGame"
            android:label="@string/text_battle">
        </activity>

        <activity android:name=".ActivityRules"
            android:label="@string/text_rules_annotation">
        </activity>

        <activity android:name=".ActivitySetShips"
            android:label="@string/text_set_ships_annotation">
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>
